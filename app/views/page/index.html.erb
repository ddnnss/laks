    <hr class="mb-5 w-50 mx-auto" />
    <!-- Products cards -->
    <div class="card-deck-wrapper">
      <div class="card-deck">
        <!-- Product -->
        <%@action_items.each do |item|%>
        <div class="card product-card hover-shadow">
          <!-- Hover content -->

          <%if item.item_new %>
            <div class="card-ribbon card-ribbon-top card-ribbon-left bg-success text-white"> НОВИНКА </div>
          <%end%>
          <%if item.collection_id > 0 %>
            <div class="card-ribbon card-ribbon-top card-ribbon-left bg-primary text-white" style="    left: -95px !important;
                width: 300px;
                top: 36px;"> В КОЛЛЕКЦИИ </div>
          <%end%>




          <!-- Image & price content -->
          <div class="pos-relative">
            <a href="/product/<%=item.item_name_translit%>">
            <img class="card-img-top img-fluid" src="/images/items/<%=item.id%>/<%=item.item_image1%>" alt="Купить <%=item.item_name%> в Москве по оптовым ценам">
            </a>
            <span class="badge badge-primary product-price-badge pos-absolute pos-t pos-r mt-2 mr-2 persist">
              - <%=item.item_discount%> %</span>

          </div>

          <!-- Content -->
          <div class="card-body">
            <small class="text-muted text-uppercase"><span class="text-primary"> <a href="/category/<%=item.subcategory.category.cat_name_translit%>"><%= item.subcategory.category.cat_name%></a></span> / <a class="text-muted" href="/subcategory/<%=item.subcategory.subcat_name_translit%>"><%= item.subcategory.subcat_name%></a> </small>
            <h4 class="card-title">
              <a href="/product/<%=item.item_name_translit%>" class="text-uppercase text-black" style="text-decoration: none;"><%= item.item_name%></a>
            </h4>
            <hr/>
            <small class="text-muted text-uppercase"><span class="text-primary"> Артикул : <%= item.item_article%></span></small>

          </div>

          <div class="card-footer">
            Цена : <del class="op-5">&#8381; <%=item.item_price%></del>
            /
            <%=item.item_price - (item.item_price * item.item_discount / 100)%> &#8381;
            <%if item.item_presents%>
              <p class="text-muted text-uppercase text-xs mb-0"><span class="badge badge-success">товар в наличии</span> </p>
            <% else %>
              <p class="text-muted text-uppercase text-xs mb-0"><span class="badge badge-warning">временно нет в наличии</span> </p>
            <% end %>
          </div>
        </div>
        <!-- Product -->
       <% end %>
      </div>
    </div>
