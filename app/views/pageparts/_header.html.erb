                Ваш заказ:
              </h5>
              <hr class="mt-0 mb-3" />
              <!--Shopping cart items-->
              <div class="cart-items">
                <%if cart.nil?%>

                <%else%>
                    <%cart.each do |cc|%>
                        <div class="cart-items-item">


                          <a href="/product/<%=cc.item_name_translit%>" class="cart-img mr-2 float-left">
                            <img class="img-fluid" src="/images/items/<%= cc.id%>/<%=cc.item_image1%>" alt="Интернет магазин Lakshmi888 предлагает купить <%= cc.item_name%>">
                          </a>
                          <div class="float-left cart_items">
                            <h5 class="mb-0">
                              <%= cc.item_name%>
                            </h5>
                            <p class="mb-0">
                              <%if session[:cart][cc.id.to_s] >= cc.item_opt_price_count  %>

                                <span class="text-primary cart_item_bold"> <%= cc.item_opt_price%> </span> &#8381;
                                  <%session[:total] = session[:total] + (cc.item_opt_price* session[:cart][cc.id.to_s])%> x <span id="item<%= cc.id%>count"><%=session[:cart][cc.id.to_s]%></span>
                                  <span style="display: none;" id="iitem<%=cc.id%>_price_total"><%=cc.item_opt_price* session[:cart][cc.id.to_s]%></span>

                              <%else%>
                                  <%if cc.item_discount > 0%>
                                      <span id="item<%=cc.id%>_cur_price">
                                      <%=cc.item_price - (cc.item_price * cc.item_discount / 100)%></span> &#8381; x <span id="item<%= cc.id%>count"><%=session[:cart][cc.id.to_s]%></span>
                                      <%session[:total] = session[:total] + (cc.item_price - (cc.item_price * cc.item_discount / 100))* session[:cart][cc.id.to_s]%>
                                      <span style="display: none;" id="iitem<%=cc.id%>_price_total"><%=(cc.item_price - (cc.item_price * cc.item_discount / 100))* session[:cart][cc.id.to_s]%></span>

                                  <%else%>
                                      <span id="item<%=cc.id%>_cur_price">
                                      <%= cc.item_price%></span> &#8381;
                                      <%session[:total] = session[:total] + (cc.item_price* session[:cart][cc.id.to_s])%> x <span id="item<%= cc.id%>count"><%=session[:cart][cc.id.to_s]%></span>
                                      <span style="display: none;" id="iitem<%=cc.id%>_price_total"><%=cc.item_price* session[:cart][cc.id.to_s]%></span>

                                  <%end%>
                              <%end%>

                            </p>

                          </div>
                        </div>
                    <%end%>
                <%end%>




              </div>
              <!--End of Shopping cart items-->
