if ('<%=@status %>' == 'ok')
{
    $.amaran({
        'theme'     :'colorful',
        'content'   :{
            bgcolor:'#5cb85c',
            color:'#fff',
            message:'Товар добавлен в закладки.'
        },

        'cssanimationIn'    :'bounceInRight',
        'cssanimationOut'   :'rollOut',
        'position'          :'top right'
    });
    $("#wish<%= @item_id%>button").css("display", "none");
    $("#wish<%= @item_id%>button_off").css("display", "block");
    $("#wish<%= @item_id%>icon").removeClass('far');
    $("#wish<%= @item_id%>icon").addClass('fas');
    $("#cart_buttons_<%= @item_id%>").css('display','block');
    $("#spinner_<%= @item_id%>").removeClass('spinner');
}
if ('<%=@status %>' == 'err')
    {
        $.amaran({
            'theme'     :'colorful',
            'content'   :{
                bgcolor:'#D24B6F',
                color:'#fff',
                message:'Эта фукция доступна для зарегистрированных пользователей'
            },

            'cssanimationIn'    :'bounceInRight',
            'cssanimationOut'   :'rollOut',
            'position'          :'top right'
        });

        $("#cart_buttons_<%= @item_id%>").css('display','block');
        $("#spinner_<%= @item_id%>").removeClass('spinner');
    }