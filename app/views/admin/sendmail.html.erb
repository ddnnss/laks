<div id="content">
  <div class="container">
    <h4 >
      Административный раздел | Почтовая рассылка
    </h4>


    <div class="row">

      <%=render 'admin/menu'%>


      <div class="col-md-9">
       <h4>Создание новой рассылки</h4>
        <%= form_for :sendmail , url: admin_savemail_path do |f| %>
            <div class="col-sm-12">
              <p>Тема письма (название рассылки):
                <input type="text" name="mail_name" class="form-control" required></p>
            </div>
            <div class="col-sm-12">
              <p>Описание товара:
                <textarea class="summernote-5" required  name="mail_text"  ></textarea></p>
            </div>
            <input type="hidden" name="act" value="new">
            <%=f.submit 'Сохранить'%>
        <%end%>
        <hr>
        <h4>Сохраненные рассылки</h4>
        <table width="100%">
          <tr>
            <td>№</td>
            <td>Название рассылки</td>
            <td>Дата создания</td>

          </tr>

          <%@mails.each do |m|%>
              <tr>
                <td><%=m.id%></td>
                <td><a href="/admin/editmail?mail_id=<%=m.id%>"><%=m.mail_subject%></a> </td>
                <td><%=m.created_at%></td>



              </tr>
          <%end%>
        </table>
      </div>
    </div>
  </div>
</div>
<script language="JavaScript">
    $(document).ready(function() {
        $('.summernote-5').summernote();
        $('.note-popover').css('display', 'none');
    });
</script>